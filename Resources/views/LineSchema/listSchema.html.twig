{% extends "::modal.html.twig" %}
{% import "TisseoTidBundle::macros.html.twig" as render %}

{% block modal_title %}
    {{ title|trans({}, 'default') }}
{% endblock %}

{% block modal_body %}
<div class="schema-content-list">
    <div class="row">
        <div class="col-md-12">
            <h1>{{ 'line_schema.list.title'|trans({}, 'default') }}</h1>{{ render.line_number(schematics[0].line, 'line', 'small') }}

            <table class="table table-striped">
                <thead>
                    <th>{{ 'line_schema.list.columns.file'|trans({}, 'default') }}</th>
                    <th>{{ 'line_schema.list.columns.modification'|trans({}, 'default') }}</th>
                </thead>
                <tbody>
                {% for schematic in schematics %}
                    <tr>
                        <td>{{ schematic.name }}</td>
                        <td>{{ schematic.comment }}</td>
                    </tr>
                {%  else  %}
                    <tr class="info">
                       <td colspan="2">
                           {{ 'line_schema.list.empty'|trans({}, 'default') }}
                       </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 action">
            <a style="float:right;" class="btn btn-default action-button" href="#" data-action="edit-schema" data-line_id="{{ lineId }}">
                {{ 'line_schema.label.upload_file'|trans({}, 'default') }}
            </a>
            <a style="float:right;" class="btn btn-default action-button" href="#" data-action="ask-schema" data-line_id="{{ lineId }}">
                {{ 'line_schema.label.ask_schematic'|trans({}, 'default') }}
            </a>
        </div>
    </div>
</div>
<div class="schematic-content-form">
</div>
{% endblock %}
{% block javascripts %}
<script type="text/javascript">
    require(['tid/edit/schema']);
</script>
{% endblock %}