{% extends "TisseoPaonBundle::container.html.twig" %}

{% import "TisseoPaonBundle::macros.html.twig" as render %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets 'bundles/tisseopaon/css/jquery.dataTables.min.css'
                   filter='cssrewrite' output='css/datatables_paon.css' %}
        <link rel="stylesheet" href="{{ asset_url }}?{{ assets_version }}" />
    {% endstylesheets %}
{% endblock %}

{% block main_content -%}
    <h1>
        {{ 'line_schema.title'|trans({}, 'default') }}
    </h1>
    {% for physicalMode, lines in data %}
        {% if lines|length > 0 %}
        <a id="{{loop.index}}" class="physical-mode"><span class="mode-icon mode-{{physicalMode|lower}}"></span>{{ physicalMode }}</a>
        <table id="{{loop.index}}" class="table datatable">
            <thead>
                <th class="col-sm-1 nat-sort">{{ 'line_schema.list.columns.number'|trans({}, 'default') }}</th>
                <th class="col-sm-3">{{ 'line_schema.list.columns.name'|trans({}, 'default') }}</th>
                <th class="col-sm-2 no-sort">{{ 'line_schema.list.columns.schematic_date'|trans({}, 'default') }}</th>
                <th class="col-sm-2 no-sort">{{ 'line_schema.list.columns.schematic_comment'|trans({}, 'default') }}</th>
                <th class="col-sm-2 no-sort">{{ 'line_schema.list.columns.group'|trans({}, 'default') }}</th>
                <th class="col-sm-2 no-sort">{{ 'global.actions'|trans({}, 'messages') }}</th>
            </thead>
            <tbody>
            {% for line in lines %}
                {% set class = '' %}

                {% if line.schematics is defined and line.schematics|length > 0 %}
                    {% set hasSchematic = true %}
                    {% set lastSchematic = (line.schematics|length)-1 %}
                    {%  if line.schematics[lastSchematic].filePath is empty %}
                        {%  set class='schematic-updating' %}
                    {% endif %}
                {% else %}
                    {% set hasSchematic = false %}
                {% endif %}
                <tr class="{{ class }}">
                    <td>
                        {{ render.line_number(line, 'line', 'free') }}
                    </td>
                    <td>
                        {% if line.LastLineVersion is defined %}
                            {% set lineName = line.LastLineVersion.name %}
                        {% else %}
                            {% set lineName = '' %}
                        {% endif %}
                        <span>{{ lineName }}</span>
                    </td>
                    {% if hasSchematic %}
                        <td>{{ line.schematics[lastSchematic].date|date('d/m/Y') }}</td>
                        <td>{{ line.schematics[lastSchematic].comment }}</td>
                    {% else %}
                        <td></td>
                        <td></td>
                    {% endif %}
                    <td>
                        {% if line.lineGroupGisContents is defined and line.lineGroupGisContents|length > 0 %}
                            <ul>
                            {% for lineGroupGisContent in line.lineGroupGisContents %}
                                <li>{{ lineGroupGisContent.lineGroupGis.name }}</li>
                            {% endfor %}
                            </ul>
                        {% endif %}
                    </td>
                    <td>
                        <a style="float:right;" class="btn btn-default" href="{{ path('tisseo_paon_schema_list', {'lineId': line.id}) }}" data-toggle="modal" data-target="#base-modal">
                            <span class="glyphicon glyphicon-list"></span> Schemas
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        {% endif %}
    {% endfor %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        require(['paon/datatables']);
    </script>
    <script>
        require(['jquery'], function() {
            $(document).on("click", ".physical-mode", function() {
                var id = $(this).attr('id');
                var datatable =  $('#'+id+".datatable");
                datatable.toggle();
                datatable.parent().toggle();
            });
        });
    </script>
{% endblock %}
