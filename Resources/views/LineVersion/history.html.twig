{% extends "TisseoTidBundle::datatable_list.html.twig" %}

{% import "TisseoTidBundle::macros.html.twig" as render %}

{% block list_title -%}
    {{'line_version.history.title'|trans({}, 'default')}}
{% endblock %}

{% block table_head -%}
    <th class="nat-sort">{{'line.list.columns.label'|trans({}, 'default')}}</th>
    <th>{{'line.list.columns.physical_mode'|trans({}, 'default')}}</th>
    <th class="no-sort">{{'line.list.columns.offers'|trans({}, 'default')}}</th>
{% endblock %}

{% block table_body -%}
    {% if lines|length == 0 %}
        <tr>
            <td colspan="3">
                {{'global.no_items'|trans}}
            </td>
        </tr>
    {% else %}
        {% for line in lines %}
            <tr>
                <td>
                    {{ render.line_number(line, 'line', 'small') }}
                </td>
                <td>
                    {{ line.physicalMode.name }}
                </td>
                <td>
                    {{ render.line_offers_history(line) }}
                </td>
            </tr>
        {% endfor %}
    {% endif %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        require(['tid/history/offer']);
    </script>
{% endblock %}
