{% extends "TisseoCoreBundle::datatable_list.html.twig" %}
{% set bundle = "TisseoPaonBundle" %}
{% set margin = '50' %}

{% import "TisseoCoreBundle::macros.html.twig" as render %}

{% block list_title %}
    {{ parent() }}
    {% if is_granted('BUSINESS_MANAGE_LINE_VERSION') %}
        -
        <a href="{{ path('tisseo_paon_line_version_create') }}" onclick="return $('.modal-dialog').removeClass('modal-dialog-large');" data-toggle="modal" data-target="#base-modal" class="btn btn-success">
            <span class="glyphicon glyphicon-plus"></span> {{ 'tisseo.paon.line_version.action.create'|trans }}
        </a>
    {% endif %}
{% endblock %}

{% block content %}
    {% for physicalMode, lineVersions in data %}
        {% if lineVersions is not empty %}
            <a id="{{ loop.index }}" class="header-ribbon physical-mode"><span class="mode-icon mode-{{ physicalMode|lower }}"></span>{{ physicalMode }}</a>
            <table id="{{ loop.index }}" class="table datatable table-hover">
                <thead>
                    <th class="col-md-1">{{ 'tisseo.paon.line_version.label.number'|trans }}</th>
                    <th class="col-md-5">{{ 'tisseo.paon.line_version.label.name'|trans }}</th>
                    <th class="col-md-1 no-search">{{ 'tisseo.paon.line_version.label.printings'|trans }}</th>
                    <th class="col-md-1 no-search">{{ 'tisseo.paon.line_version.label.version'|trans }}</th>
                    <th class="col-md-1 no-search">{{ 'tisseo.paon.line_version.label.start_date'|trans }}</th>
                    <th class="col-md-1 no-search">{{ 'tisseo.paon.line_version.label.status'|trans }}</th>
                    <th class="col-md-2 no-search no-sort">{{ 'tisseo.global.actions'|trans }}</th>
                </thead>
                <tbody>
                {% for lineVersion in lineVersions %}
                    <tr>
                        <td>
                            {{ render.line_number(lineVersion, 'lineVersion', 'free') }}
                        </td>
                        <td>
                            <span>{{ lineVersion.name }}</span>
                        </td>
                        <td>
                            {{ lineVersion.totalPrintings }}
                            <a style="float:right;" class="btn btn-xs btn-success small-link" href="{{ path('tisseo_paon_printing_create', {'lineVersionId': lineVersion.id}) }}" data-toggle="modal" data-target="#base-modal">
                                <span class="glyphicon glyphicon-plus"></span>
                            </a>
                        </td>
                        <td>
                            {{ lineVersion.version }}
                        </td>
                        <td>
                            {{ render.line_version_startDate(lineVersion) }}
                        </td>
                        <td>
                            {{ render.line_version_status(lineVersion) }}
                        </td>
                        <td>
                            <div class="btn-group">
                                <button data-toggle="dropdown" class="btn btn-default dropdown-toggle">{{ 'tisseo.paon.line_version.action.offer'|trans }} <span class="caret"></span></button>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="btn" role="button" href="{{ path('tisseo_paon_line_version_show', {'lineVersionId': lineVersion.id}) }}" onclick="return $('.modal-dialog').removeClass('modal-dialog-large');" data-toggle="modal" data-target="#base-modal">
                                            {{ 'tisseo.paon.line_version.action.show'|trans }}
                                        </a>
                                    </li>
                                    {% if is_granted('BUSINESS_MANAGE_LINE_VERSION') %}
                                        <li>
                                            <a class="btn" role="button" href="{{ path('tisseo_paon_line_version_edit', {'lineVersionId': lineVersion.id}) }}" onclick="return $('.modal-dialog').removeClass('modal-dialog-large');" data-toggle="modal" data-target="#base-modal">
                                                {{ 'tisseo.global.edit'|trans }}
                                            </a>
                                        </li>
                                        <li>
                                            <a class="btn" role"button" href="{{ path('tisseo_paon_line_version_close', {'lineVersionId': lineVersion.id}) }}" onclick="return $('.modal-dialog').removeClass('modal-dialog-large');" data-toggle="modal" data-target="#base-modal">
                                                {{ 'tisseo.paon.line_version.action.close'|trans }}
                                            </a>
                                        </li>
                                        <li>
                                            <a class="btn clean-offer" role="button" href="{{ path('tisseo_paon_line_version_clean', {'lineVersionId': lineVersion.id}) }}">
                                                {{ 'tisseo.paon.line_version.action.clean'|trans }}
                                            </a>
                                        </li>
                                        {% if lineVersion.startDate|date('Ymd') > "now"|date('Ymd') %}
                                            <li>
                                                <a class="btn delete-offer" role="button" href="{{ path('tisseo_paon_line_version_delete', {'lineVersionId': lineVersion.id}) }}">
                                                    {{ 'tisseo.paon.line_version.action.delete'|trans }}
                                                </a>
                                            </li>
                                        {% endif %}
                                    {% endif %}
                                </ul>
                            </div>
                            {% if is_granted('BUSINESS_MANAGE_LINE_VERSION') %}
                            <div class="btn-group">
                                <button data-toggle="dropdown" class="btn btn-default dropdown-toggle">{{ 'tisseo.paon.line_version.action.publication'|trans }} <span class="caret"></span></button>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="btn" role="button" href="{{ path('tisseo_paon_calendar_edit', {'lineVersionId': lineVersion.id}) }}" onclick="return $('.modal-dialog').addClass('modal-dialog-large');" data-toggle="modal" data-target="#base-modal">
                                            {{ 'tisseo.paon.line_version.action.calendar'|trans }}
                                        </a>
                                    </li>
                                    <li>
                                    <a class="btn" role="button" href="{{ path('tisseo_paon_exception_edit', {'lineVersionId': lineVersion.id}) }}">
                                            {{ 'tisseo.paon.line_version.action.exception'|trans }}
                                        </a>
                                    </li>
                                </ul>
                            </div>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% endif %}
    {% endfor %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        require(['jquery'], function() {
            $(document).on("click", ".physical-mode", function() {
                var id = $(this).attr('id');
                var datatable =  $('#'+id+".datatable");
                datatable.toggle();
                datatable.parent().toggle();
            });
        });
    </script>
    <script>
        require(['bootbox'], function(bootbox) {
            $(document).on("click", ".clean-offer", function(event) {
                event.preventDefault();
                var self = this;
                bootbox.confirm("{{ 'tisseo.paon.line_version.confirm.clean'|trans }}", function(result) {
                    if (result)
                        window.location = self.href;
                });
            });
            $(document).on("click", ".delete-offer", function(event) {
                event.preventDefault();
                var self = this;
                bootbox.confirm("{{ 'tisseo.paon.line_version.confirm.delete'|trans }}", function(result) {
                    if (result)
                        window.location = self.href;
                });
            });
        });
    </script>
{% endblock %}
