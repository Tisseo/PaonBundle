{% extends no_left_menu == true ? "TisseoTidBundle::container.html.twig" : "TisseoTidBundle::container_and_menu.html.twig" %}

{% import "CanalTPSamEcoreUserManagerBundle::macros.html.twig" as macros %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets 'bundles/tisseotid/css/jquery.dataTables.min.css'
                   filter='cssrewrite' output='css/datatables_tid.css' %}
        <link rel="stylesheet" href="{{ asset_url }}?{{ assets_version }}" />
    {% endstylesheets %}
{% endblock %}

{% block main_content -%}
    <h1>{% block list_title -%}{% endblock %}</h1>
    {% block line_comment -%}{% endblock %}
    {% block list_menu -%}{% endblock %}
    <table id="datatable" class="table {% block table_classes -%}table-hover{% endblock %}">
        <thead>
            <tr>
               {% block table_head -%}{% endblock %}
            </tr>
        </thead>
        <tbody>
        {% block table_body -%}
        {% endblock %}
        </tbody>
    </table>
    {% block list_pagination -%}
    {% endblock %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        require(['tid/datatables']);
    </script>
{% endblock %}
