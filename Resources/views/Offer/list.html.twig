{% extends "TisseoDatawarehouseBundle::generic_list.html.twig" %}

{% block list_title -%}
    {{'offer.list.title'|trans({}, 'default')}}
    {% if is_granted('BUSINESS_MANAGE_OFFER') %}
        -
        <a href="{{ path('tisseo_datawarehouse_offer_edit') }}" data-toggle="modal" data-target="#base-modal" class="btn btn-success">
            <span class="glyphicon glyphicon-plus"></span> {{'offer.create'|trans({}, 'default')}}
        </a>
    {% endif %}
{% endblock %}

{% block table_head -%}
    <th>{{'offer.list.columns.label'|trans({}, 'default')}}</th>
    {% if is_granted('BUSINESS_MANAGE_OFFER') %}
        <th>{{'global.actions'|trans({}, 'messages')}}</th>
    {% endif %}
{% endblock %}

{% block table_body -%}
    {% if offers|length == 0 %}
        <tr>
            <td colspan="4">
                {{'global.no_items'|trans}}
            </td>
        </tr>
    {% else %}
        {% for offer in offers %}
            <tr>
                <td>
                    {{offer.number}}
                </td>
                <td>
                    {% if is_granted('BUSINESS_MANAGE_OFFER') %}                        
                        <a class="btn btn-default" href="{{ path('tisseo_datawarehouse_offer_edit', {'offerId': offer.id}) }}" data-toggle="modal" data-target="#base-modal">
                            <span class="glyphicon glyphicon-edit"></span> {{'global.edit'|trans({}, 'messages')}}
                        </a>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
    {% endif %}
{% endblock %}
