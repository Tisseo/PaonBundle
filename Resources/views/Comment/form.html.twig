{% extends "::modal.html.twig" %}

{% form_theme form 'TisseoCoreBundle:Form:fields.html.twig' %}

{% block common_modal %}
    <div id="new-comment">
    {{ parent() }}
    </div>
{% endblock %}

{% block modal_title %}
    {{ title|trans }}
{% endblock %}

{% block open_form %}
    {{ form_start(form) }}
{% endblock %}

{% block modal_body %}
    {{ form_errors(form) }}
    {{ form_row(form.label) }}
    {{ form_row(form.commentText) }}
{% endblock %}

{% block modal_actions %}
    <button id="apply-comment-form" type="submit" class="btn btn-success">
        <span class="glyphicon glyphicon-pencil"></span>{{ 'tisseo.global.save'|trans }}
    </button>
    {{ form_end(form) }}
{% endblock %}
