{% extends "TisseoCoreBundle::datatable_list.html.twig" %}
{% set bundle = "TisseoPaonBundle" %}
{% set margin = '50' %}
{% set navTitle = 'tisseo.paon.menu.schematic.manage' %}
{% set pageTitle = 'tisseo.paon.schematic.title.list' %}

{% import "TisseoCoreBundle::macros.html.twig" as render %}

{% block list_title %}
    {{ parent() }}
        -
    {% if is_granted('BUSINESS_MANAGE_NEW_SCHEMA') %}
        <a href="{{ path('tisseo_paon_schematic_export') }}" class="btn btn-default" data-toggle="modal" data-target="#base-modal">
            <span class="glyphicon glyphicon-export"></span> {{ 'tisseo.paon.schematic.action.export'|trans }}
        </a>
    {% endif %}
{% endblock %}

{% block content %}
    {% for physicalMode, lines in data %}
        {% if lines is not empty %}
            <a id="{{ loop.index0 }}" class="header-ribbon physical-mode"><span class="mode-icon mode-{{ physicalMode|lower }}"></span>{{ physicalMode }}</a>
            <table id="{{ loop.index0 }}" class="table datatable table-hover">
                <thead>
                    <th class="col-md-1">{{ 'tisseo.paon.schematic.label.number'|trans }}</th>
                    <th class="col-md-3">{{ 'tisseo.paon.schematic.label.name'|trans }}</th>
                    <th class="col-md-2 no-sort">{{ 'tisseo.paon.schematic.label.date'|trans }}</th>
                    <th class="col-md-2 no-sort">{{ 'tisseo.paon.schematic.label.comment'|trans }}</th>
                    <th class="col-md-2 no-sort">{{ 'tisseo.paon.schematic.label.group_gis'|trans }}</th>
                    <th class="col-md-2 no-sort no-search">{{ 'tisseo.global.actions'|trans }}</th>
                </thead>
                <tbody>
                {% for line in lines %}
                    {% set lastSchematic = line.schematics.first %}
                    <tr{% if lastSchematic and lastSchematic.filePath is empty %} class="schematic-updating"{% endif %}>
                        <td>{{ render.line_number(line.LastLineVersion, 'lineVersion', 'free') }}</td>
                        <td>
                            <span>{{ line.LastLineVersion.name }}</span>
                        </td>
                        {% set schematic = line.LastSchematic(true) %}
                        <td>{% if schematic %}{{ schematic.date|date('d/m/Y') }}{% endif %}</td>
                        <td>{{ lastSchematic.comment }}</td>
                        <td>
                            {% if line.lineGroupGisContents is defined and line.lineGroupGisContents|length > 0 %}
                                <ul>
                                {% for lineGroupGisContent in line.lineGroupGisContents %}
                                    <li>{{ lineGroupGisContent.lineGroupGis.name }}</li>
                                {% endfor %}
                                </ul>
                            {% endif %}
                        </td>
                        <td>
                            <a class="btn btn-default" href="{{ path('tisseo_paon_schematic_list', {'lineId': line.id}) }}" data-toggle="modal" data-target="#base-modal">
                                <span class="glyphicon glyphicon-list"></span> {{ 'tisseo.paon.schematic.action.list'|trans }}
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% endif %}
    {% endfor %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        require(['jquery'], function() {
            $(document).on("click", ".physical-mode", function() {
                var id = $(this).attr('id');
                var datatable =  $('#'+id+".datatable");
                datatable.toggle();
                datatable.parent().toggle();
            });
        });
    </script>
{% endblock %}
